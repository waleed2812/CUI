<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane maxHeight="720.0" maxWidth="1280.0" minHeight="720.0" minWidth="1280.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!--
           Main Title
        -->
        <Label id="mainTitle" layoutX="20.0" layoutY="14.0" prefHeight="98.0" prefWidth="776.0" text="Cache Simulator">
            <font>
                <Font name="System Italic" size="70.0" />
            </font>
        </Label>
        <!--
           Description
        -->
        <Label layoutX="20.0" layoutY="117.0" prefHeight="49.0" prefWidth="754.0" text="A simple Direct Mapped Cache Simulator" textFill="#7c7878">
            <font>
                <Font name="Arial Italic" size="20.0" />
            </font>
        </Label>
        <!--
           Ram Size Input
        -->
        <Label layoutX="20.0" layoutY="166.0" prefHeight="26.0" prefWidth="80.0" text="Ram Size">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <TextField id="ramSizeIn" layoutX="100.0" layoutY="166.0" prefHeight="26.0" prefWidth="80.0" text="900" />
        <RadioButton fx:id="ramB" layoutX="200.0" layoutY="170.0" mnemonicParsing="false" text="B">
            <toggleGroup>
                <ToggleGroup fx:id="rdbtnRAM" />
            </toggleGroup></RadioButton>
        <RadioButton fx:id="ramKB" layoutX="240.0" layoutY="170.0" mnemonicParsing="true" text="KB" toggleGroup="$rdbtnRAM" />
        <RadioButton fx:id="ramMB" layoutX="280.0" layoutY="170.0" mnemonicParsing="false" text="MB" toggleGroup="$rdbtnRAM" />
        <!--
           Cache Size Input
        -->
        <Label layoutX="345.0" layoutY="166.0" prefHeight="26.0" prefWidth="80.0" text="Cache Size">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <TextField id="cacheSizeIn" layoutX="425.0" layoutY="166.0" prefHeight="26.0" prefWidth="80.0" text="4096" />
        <RadioButton fx:id="cacheB" layoutX="515.0" layoutY="170.0" mnemonicParsing="true" text="B">
            <toggleGroup>
                <ToggleGroup fx:id="rdbtnCache" />
            </toggleGroup></RadioButton>
        <RadioButton fx:id="cacheKB" layoutX="555.0" layoutY="170.0" mnemonicParsing="false" text="KB" toggleGroup="$rdbtnCache" />
        <RadioButton fx:id="cacheMB" layoutX="595.0" layoutY="170.0" mnemonicParsing="false" text="MB" toggleGroup="$rdbtnCache" />
        <!--
           Block Size Input
        -->
        <Label layoutX="655.0" layoutY="166.0" prefHeight="26.0" prefWidth="80.0" text="Block Size">
            <font>
                <Font name="System Bold" size="12.0" />
            </font></Label>
        <TextField id="blockSizeIn" layoutX="735.0" layoutY="166.0" prefHeight="26.0" prefWidth="80.0" text="8" />
        <RadioButton fx:id="blockB" layoutX="825.0" layoutY="170.0" mnemonicParsing="true" text="B">
            <toggleGroup>
                <ToggleGroup fx:id="rdbtnBlock" />
            </toggleGroup></RadioButton>
        <RadioButton fx:id="blockKB" layoutX="865.0" layoutY="170.0" mnemonicParsing="false" text="KB" toggleGroup="$rdbtnBlock" />
        <RadioButton fx:id="blockMB" layoutX="905.0" layoutY="170.0" mnemonicParsing="false" text="MB" toggleGroup="$rdbtnBlock" />




    </children>
</Pane>
